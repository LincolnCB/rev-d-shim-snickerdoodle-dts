/dts-v1/;
/include/ "snickerdoodle-black.dtsi"

/ {
	model = "snickerdoodle black";

        usb_phy0: phy0 {
                compatible = "usb-nop-xceiv";
                #phy-cells = <0>;
        };
};

&gem0 {
	status =	"okay";
	phy-mode =	"rgmii-id";
	phy-handle =	<&ethernet_phy0>;

	ethernet_phy0: ethernet-phy@0 {
		reg = <0>;
	};
};

&usb0 {
	status = "okay";
	dr_mode = "host";
	usb-phy = <&usb_phy0>;
};
